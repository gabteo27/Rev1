modules = ["nodejs-20", "postgresql-16"]

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Development Server"
author = 38813652
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "HOST=0.0.0.0 npm run dev"

[[workflows.workflow]]
name = "Start Server"
author = 38813652
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "HOST=0.0.0.0 PORT=5000 npm run dev"

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = "npm install"
run = ["sh", "-c", "npm start"]
